---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';
import { calculateReadTime, formatReadTime } from '../../utils/readTime';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}
---

<Base title="Blog - Alex Zillion">
  <h1>Blog</h1>
  <p class="muted">Trying to build a <a href="https://www.hermitary.com/solitude/montaigne.html" target="_blank" rel="noopener noreferrer">"back shop"</a></p>
  
  <ul class="post-list">
    {posts.map(post => (
      <li>
        <a href={`/blog/${post.id}`}>{post.data.title}</a>
        <br />
        <span class="post-date">{formatDate(post.data.date)} Â· {formatReadTime(calculateReadTime(post.body))}</span>
        <div class="tags">
          {post.data.tags.map(tag => (
            <a href={`/tags/${tag}`} class="tag">#{tag}</a>
          ))}
        </div>
      </li>
    ))}
  </ul>
  
  <hr />
  
  <p>
    Subscribe via <a href="/rss.xml">RSS</a>.
  </p>
</Base>

